#!/bin/bash
. $(dirname $(readlink -f $0))/virt-lib

NAME=$1

if [ -z "$NAME" ]; then
	echo "Usage: $0 NAME"
	exit 2
fi

shift

gethost $NAME

if [ "${#@}" == "0" ]; then
	TERM=rxvt-256color ssh -i /root/.ssh/virt-rsa -t root@$HOSTIP4 bash
else
	TERM=rxvt-256color ssh -i /root/.ssh/virt-rsa root@$HOSTIP4 "$@"
fi
